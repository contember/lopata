{
	"name": "lopata",
	"version": "0.2.1",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/contember/lopata"
	},
	"bin": {
		"lopata": "src/cli.ts"
	},
	"exports": {
		"./vite-plugin": "./src/vite-plugin/index.ts"
	},
	"files": [
		"src/",
		"!src/dashboard/",
		"!src/error-page/",
		"dist/"
	],
	"scripts": {
		"dev": "cd examples/playground && bun ../../src/cli.ts dev",
		"cli": "bun src/cli.ts",
		"test": "bun test tests/",
		"lint": "biome lint .",
		"lint:fix": "biome lint . --write",
		"format": "dprint fmt",
		"format:check": "dprint check",
		"build:assets": "bun scripts/build-assets.ts",
		"prepublishOnly": "bun scripts/build-assets.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/bun": "latest",
		"dprint": "^0.51.1",
		"bun-plugin-tailwind": "^0.1.2",
		"vite": "^7.3.1",
		"wrangler": "^4.65.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"optionalDependencies": {
		"puppeteer": "*",
		"puppeteer-core": "*"
	},
	"dependencies": {
		"@cloudflare/sandbox": "^0.7.4",
		"html-rewriter-wasm": "^0.4.1",
		"preact": "^10.28.3",
		"sharp": "^0.34.5",
		"smol-toml": "^1.6.0",
		"tailwindcss": "^4.1.18"
	}
}
